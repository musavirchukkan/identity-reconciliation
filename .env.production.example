# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/bitespeed_identity?schema=public"

# Redis Configuration (optional but recommended for production)
REDIS_URL="redis://username:password@host:6379"

# Security Configuration
# Generate a strong API key for production
API_KEY="your-secure-api-key-here-min-32-chars"

# Generate a strong JWT secret (min 32 characters)
JWT_SECRET="your-super-secure-jwt-secret-min-32-characters"

# CORS Configuration
CORS_ORIGINS="https://yourdomain.com,https://api.yourdomain.com"

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_IDENTIFY_MAX=10

# Performance Configuration
MAX_CONTACTS_PER_OPERATION=1000
MAX_CONTACT_CHAIN_DEPTH=10
MAX_REQUEST_BODY_SIZE=1mb
REQUEST_TIMEOUT_MS=30000

# Database Connection Configuration
DB_CONNECTION_TIMEOUT_MS=10000
DB_MAX_CONNECTIONS=10

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# External Services (if applicable)
WEBHOOK_URL="https://your-webhook-endpoint.com/webhook"
NOTIFICATION_SERVICE_URL="https://your-notification-service.com"

# Feature Flags
ENABLE_ENHANCED_VALIDATION=true
ENABLE_BUSINESS_RULES=true
ENABLE_CONTACT_VERIFICATION=false

# Development/Debug Features (keep false in production)
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_DOCS=false