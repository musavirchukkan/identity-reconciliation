{
  "name": "bitespeed-identity-reconciliation",
  "version": "1.0.0",
  "description": "Identity reconciliation service for linking customer contacts across multiple purchases",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "docker:dev": "docker-compose --profile development up -d",
    "docker:prod": "docker-compose --profile production up -d",
    "docker:stop": "docker-compose --profile development --profile production down",
    "deploy:check": "./scripts/deploy.sh check",
    "deploy:prepare": "./scripts/deploy.sh prepare",
    "deploy:all": "./scripts/deploy.sh all",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "identity-reconciliation",
    "customer-linking",
    "contact-management",
    "bitespeed",
    "nodejs",
    "typescript",
    "postgresql",
    "docker"
  ],
  "author": "Bitespeed Team <developer@bitespeed.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitespeed/identity-reconciliation.git"
  },
  "bugs": {
    "url": "https://github.com/bitespeed/identity-reconciliation/issues"
  },
  "homepage": "https://github.com/bitespeed/identity-reconciliation#readme",
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "express": "^4.19.2",
    "zod": "^3.23.8",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.8",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "prisma": "^5.15.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "prettier": "^3.3.2"
  }